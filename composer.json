{
	"name": "qtap/kdc-qtap-starter",
	"description": "A starter template for building qTap App child plugins",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "qTap",
			"homepage": "https://qtap.app"
		}
	],
	"homepage": "https://qtap.app/apps/starter",
	"support": {
		"issues": "https://github.com/user/kdc-qtap-starter/issues"
	},
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"lint": "@phpcs",
		"fix": "@phpcbf"
	}
}
