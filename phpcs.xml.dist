<?xml version="1.0"?>
<ruleset name="qTap Starter Coding Standards">
	<description>PHP_CodeSniffer ruleset for qTap Starter plugin.</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/tests/*</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>*.min.css</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="."/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>

	<!-- Rules: WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<!-- Rules: WordPress VIP -->
	<rule ref="WordPress-VIP-Go">
		<!-- Allow file_get_contents for local files -->
		<exclude name="WordPressVIPMinimum.Performance.FetchingRemoteData.FileGetContentsUnknown"/>
	</rule>

	<!-- Rules: PHPCompatibility -->
	<rule ref="PHPCompatibilityWP"/>

	<!-- PHP Version -->
	<config name="testVersion" value="7.4-"/>

	<!-- WordPress Version -->
	<config name="minimum_supported_wp_version" value="5.8"/>

	<!-- Text Domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="kdc-qtap-starter"/>
			</property>
		</properties>
	</rule>

	<!-- Prefixes -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="kdc_qtap_starter"/>
				<element value="KDC_QTAP_STARTER"/>
				<element value="KDC_qTap_Starter"/>
			</property>
		</properties>
	</rule>

	<!-- File Name -->
	<rule ref="WordPress.Files.FileName">
		<properties>
			<property name="strict_class_file_names" value="false"/>
		</properties>
	</rule>
</ruleset>
